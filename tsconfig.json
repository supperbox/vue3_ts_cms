{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "node"],
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0"
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
